{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            // https://nx.dev/structure/monorepo-tags documentaion nx scope & type
            "depConstraints": [
              // {
              //   "sourceTag": "*",
              //   "onlyDependOnLibsWithTags": ["*"]
              // },
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": [
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:ort-alumni-client",
                "onlyDependOnLibsWithTags": [
                  "scope:ort-alumni-client",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:ort-alumni-client-app",
                "onlyDependOnLibsWithTags": [
                  "scope:ort-alumni-client-app","scope:shared",
                  "scope:ort-alumni-client"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util", "type:auth"]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:util","type:shared-evironments", "type:auth"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util", "type:auth"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util","shared-evironments" , "type:auth"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
