{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@angular-eslint/prefer-on-push-component-change-detection": "error",
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            // https://nx.dev/structure/monorepo-tags documentaion nx scope & type
            "depConstraints": [
              {
                "sourceTag": "scope:ort-alumni-client-app",
                "onlyDependOnLibsWithTags": [
                  "scope:client-lib"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util", "type:shared-assets"]
              },
              {
                "sourceTag": "type:data-accesses",
                "onlyDependOnLibsWithTags": ["type:data-accesses", "type:util","type:shared-evironments"]
              },
              {
                "sourceTag": "type:util",
                "onlyDependOnLibsWithTags": ["type:util"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:ui", "type:util", "type:data-accesses","type:shared-evironments","type:shared-assets"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
